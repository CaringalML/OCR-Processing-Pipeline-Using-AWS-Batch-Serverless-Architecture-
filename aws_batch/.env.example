# === OCR TEXT PROCESSING ENHANCEMENT FEATURE FLAGS ===
# Use these environment variables to control enhanced features
# Set to 'false' to disable specific enhancements if issues occur

# Email and URL Processing Enhancement
ENHANCED_EMAIL_URL_PROCESSING=true

# Advanced Grammar Processing
ENHANCED_GRAMMAR_PROCESSING=true

# AI Models (Transformers, spaCy) - Set to 'true' to enable advanced AI
ENHANCED_AI_MODELS=true

# Fuzzy String Matching
ENHANCED_FUZZY_MATCHING=true

# OCR Cleanup Enhancement  
ENHANCED_OCR_CLEANUP=true

# === EXISTING ENVIRONMENT VARIABLES ===
# Required for AWS Batch processing
# S3_BUCKET=your-s3-bucket
# S3_KEY=path/to/file
# FILE_ID=unique-file-id
# DYNAMODB_TABLE=your-dynamodb-table

# Optional logging configuration
# LOG_LEVEL=INFO
# PYTHON_ENV=production